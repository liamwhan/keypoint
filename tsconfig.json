{
    "compilerOptions": {
      "noImplicitAny": false,
      "noEmitOnError": true,
      "removeComments": true,
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": false,
      "allowJs": true,
      "typeRoots": ["types", "./node_modules/@types"],
      "inlineSourceMap": true,
    },
    "typeAcquisition": {
      "enable": true,
    },
    
    "files": [
      "System/PubSub.ts",
      "System/InputManager.ts",
      "types/global.ts",
      "AST/Lexer.ts",
      "AST/Parser.ts",
      "SlideRenderer.ts",
      "index.ts",
      "renderer.ts"
      
    ],
    "exclude": [
      "node_modules"
    ]
  }